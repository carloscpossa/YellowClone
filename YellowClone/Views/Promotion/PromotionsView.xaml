<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="YellowClone.Views.Promotion.PromotionsView"
    Title="Promotions"
>
    <ContentPage.Content>
        <FlexLayout
            Direction="Column"
            BackgroundColor="#f5f5f5"
            Padding="40"
        >
            <Image 
                Source="promotion.png"
                FlexLayout.Grow="1"
            />
            
            <Label 
                Text="There are currently no active promotions"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                FlexLayout.Grow="1"
            />
            
            <Button 
                Style="{StaticResource YellowButton}"
                Text="ADD PROMOTION"
                FontAttributes="Bold"
            />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>
